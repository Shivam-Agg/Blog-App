<%include partials/header%>
  <div class="ui main text segment container">
      <div class="ui huge header">
          Edit <%=blog.title%>
      </div>
      <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
          <div class="field">
              <label>Title</label>
              <input type="text" name="blog[title]" placeholder="Title" value="<%=blog.title%>">
          </div>
          <div class="field">
              <label>Image</label>
              <input type="text" name="blog[image]" placeholder="Image URL" value="<%=blog.image%>">
          </div>
          <div class="field">
              <label>Blog Content</label>
              <textarea name="blog[body]" placeholder="Describe"><%=blog.body%></textarea>
          </div>
          <button class="ui secondary button">Submit</button>
      </form>
  </div>
<%include partials/footer%>